@model IEnumerable<Kursavaya_ASP.Models.Tables.Main.Department>
@{
    ViewBag.Title = ViewBag.Header = "Отдления ГСС";
}

<h4 class="text-center">@ViewBag.Header</h4>


@* Вывод коллекции сведений о работниках *@
<table id="table" class="table table-bordered table-hover w-100 mx-auto">
    <thead>
        <tr class="bg-light text-black align-middle">
            <th>Название</th>
            <th>Город</th>
            <th>Телефон</th>
            <th>Год создания</th>
            <th class="text-center">
                <a class="btn btn-outline-success ms-2"
                   asp-controller="Departments"
                   asp-action="AddDepartment"
                   title="Добавить...">
                    <i class="bi bi-plus-square"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr class="align-middle">
                <td>@department.DepName</td>
                <td>@department.City.CityName</td>
                <td class="px-5">@department.Phone</td>
                <td class="px-5">@department.YearCreation</td>
                <td class="text-center">
                    <a class="btn btn-outline-primary ms-2"
                       asp-controller="Departments"
                       asp-action="UpdateById"
                       asp-route-id="@department.Id" title="Изменить...">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a class="btn btn-outline-danger ms-2"
                       asp-controller="Departments"
                       asp-action="DeleteById"
                       asp-route-id="@department.Id" title="Удалить...">
                        <i class="bi bi-trash3"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
