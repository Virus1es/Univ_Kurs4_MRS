@model Kursavaya_ASP.Models.Tables.Main.Mine

<div class="text-center w-25 mx-auto">
    <h3>@ViewBag.Header</h3>

    <form class="bg-light p-5" method="post" enctype="multipart/form-data"
          asp-controller="MinesAndPlots" asp-action="UpdateMine">

        @* идентификатор пользователя, не меняем, но используем *@
        <input asp-for="Id" type="hidden" value="@Model.Id" />


        <div class="mt-2">
            <label asp-for="MineName" class="form-label" style="font-size: 14pt">Название</label>
            <input asp-for="MineName" type="text" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="IdCity">Город размещения</label>
            <select class="form-select" asp-for="IdCity" asp-items="@ViewBag.Cities"></select>
        </div>

        <div class="mt-2">
            <label asp-for="MaxDepth" class="form-label" style="font-size: 14pt">Максимальная глубина, м.</label>
            <input asp-for="MaxDepth" type="number" class="form-control" min="100"/>
        </div>

        <div class="mt-2">
            <label asp-for="Area" class="form-label" style="font-size: 14pt">Площадь, м<sup>2</sup></label>
            <input asp-for="Area" type="number" class="form-control" min="100"/>
        </div>

        <div class="mt-2">
            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a class="btn btn-secondary" asp-controller="MinesAndPlots" asp-action="Index">Отмена</a>
        </div>
    </form>

    <p class="text-danger">@ViewBag.ErrMessage</p>
</div>

